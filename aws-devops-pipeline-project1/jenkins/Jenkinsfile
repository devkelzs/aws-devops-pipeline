pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/devkelzs/aws-devops-pipeline.git'
            }
        }

        stage('Deploy to Web Server') {
            steps {
                sh 'ansible-playbook -i ansible/inventory.ini ansible/playbook.yml'
            }
        }
    }
}
