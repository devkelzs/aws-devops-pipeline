pipeline {
    agent any

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
        SUDO_PASS = credentials('your-sudo-password-id') // Add a Jenkins secret
    }

    stages {
        stage('Install Ansible on Jenkins EC2') {
            steps {
                sh '''
                    echo "Installing Ansible if not present..."
                    if ! command -v ansible >/dev/null 2>&1; then
                      echo "$SUDO_PASS" | sudo -S apt update
                      echo "$SUDO_PASS" | sudo -S apt install -y software-properties-common
                      echo "$SUDO_PASS" | sudo -S add-apt-repository --yes --update ppa:ansible/ansible
                      echo "$SUDO_PASS" | sudo -S apt install -y ansible
                    else
                      echo "Ansible already installed."
                    fi
                '''
            }
        }

        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/devkelzs/aws-devops-pipeline.git'
            }
        }

        stage('Deploy to Web Server') {
            steps {
                sh '''
                    echo "Running Ansible Playbook..."
                    ansible-playbook -i ansible/inventory.ini ansible/playbook.yml
                '''
            }
        }
    }

    post {
        failure {
            echo "Deployment failed. Please check the logs."
        }
        success {
            echo "Deployment successful!"
        }
    }
}
